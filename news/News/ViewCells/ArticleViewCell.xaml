<?xml version="1.0" encoding="UTF-8"?>
<ViewCell 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrl="clr-namespace:News.Controls;assembly=News" 
    x:Class="News.ViewCells.ArticleViewCell" >
    <StackLayout Orientation="Vertical" 
                 Spacing="0" 
                 Margin="10">
        <Frame BackgroundColor="#3c3c3c" 
               HasShadow="true"
               IsClippedToBounds="false"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"
               Padding="0"
               CornerRadius="10"
               Grid.Row="0">
            <Frame BackgroundColor="Transparent" 
                   HasShadow="false"
                   IsClippedToBounds="true"
                   VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand"
                   Margin="0"
                   Padding="0"
                   CornerRadius="10">
                 <Grid VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.7*"/>
                        <RowDefinition Height="0.3*"/>
                    </Grid.RowDefinitions>
                    <Label Style="{DynamicResource labelStyle}" 
                           Text="ðŸ—žï¸" 
                           FontSize="60" 
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Grid.Row="0"/>
                    <Image Source="{Binding UrlToImage}"
                           VerticalOptions="FillAndExpand"
                           HorizontalOptions="FillAndExpand"
                           Aspect="AspectFill"
                           Grid.Row="0"
                           Grid.RowSpan="2"/>
                    <Grid VerticalOptions="Start"
                          HorizontalOptions="End">
                        <ctrl:FavoriteButton IsFavorite="{Binding IsFavorite}"
                                             WidthRequest="50"
                                             HeightRequest="50"
                                             Margin="0"
                                             Padding="0"
                                             Command="{Binding SwitchFavoriteArticleCommand}" />
                    </Grid>
                    <Grid VerticalOptions="FillAndExpand" 
                          HorizontalOptions="FillAndExpand"
                          Style="{DynamicResource articleBackgroundStyle}"
                          Grid.Row="1">
                        <Label Style="{DynamicResource labelStyle}"
                               Text="{Binding Title}" 
                               MaxLines="2"
                               FontSize="18"
                               Margin="10,0,10,0"
                               VerticalOptions="CenterAndExpand"
                               LineBreakMode="TailTruncation" />
                    </Grid>
                </Grid>
            </Frame>
        </Frame>
        <Label HorizontalOptions="End"
               VerticalOptions="Start"
               Text="{Binding Footer}"
               Style="{DynamicResource accentLabelStyle}"
               MaxLines="1"
               FontSize="Small"
               Margin="5,7,5,0"
               LineBreakMode="MiddleTruncation"/>
    </StackLayout>
</ViewCell>
